{
  "name": "ghosthunter-server",
  "version": "0.4.2",
  "description": "Make GhostHunter accessible as an API",
  "main": "index.js",
  "repository": "https://github.com/hexrweb/ghosthunter-server",
  "author": "HexR <hello@hexr.org>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "compile-frontend": "node frontend/compile.js",
    "test": "xo"
  },
  "dependencies": {
    "got": "8.3.1",
    "lunr": "2.2.1"
  },
  "devDependencies": {
    "uglify-js": "^3.4.0",
    "xo": "^0.21.1"
  },
  "xo": {
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ]
    },
    "overrides": [
      {
        "files": "frontend/*.js",
        "env": [
          "browser"
        ],
        "rules": {
          "no-var": "off",
          "prefer-arrow-callback": "off",
          "func-names": "off"
        }
      }
    ]
  }
}
